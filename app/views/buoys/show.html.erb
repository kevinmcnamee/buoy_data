<p id="notice"><%= notice %></p>

<script>
$(function() {
  $('.datepicker').pickadate();
});
</script>

<p>
  <b>Name:</b>
  <%= @buoy.name %>
</p>
<div class='row-fluid'>
  <div class='span12'>
    <%= render 'buoys_map' %>
  </div>
</div>

<div class='row-fluid date-picker'>
    <%= form_tag(buoy_path, :method => "get") do %>
      <div class='span3'>
        <fieldset>
          <label id='picker_strings'>From:</label>
          <input id="picker_strings" name='from' class="datepicker" type="text">
        </fieldset>
      </div>
      <div class='span3'>
        <fieldset>
          <label id='picker_strings'>To</label>
          <input id="picker_strings" name='to' class="datepicker" type="text">
        </fieldset>
      </div>
      <button class='btn btn-success btn-small'>Submit</button>
    </div>
    <% end %>
</div>

<div class ='row-fluid'>
  <div class='span6'>
    <ul class='data-table'>
      <li class='span4'>Date</li>
      <li class='span4'>Swell Height</li>
      <li class='span4'>Swell Quality</li>
      <% @buoy_data.each do |buoy_data| %>
        <div class='row-fluid'>
          <li class='span4'><%= buoy_data.date %></li>
          <li class='span4'><%= buoy_data.wave_height.round(1) %> ft.</li>
          <li class='span4'><%= buoy_data.quality %></li>
        </div>
      <% end %>
    </div>
  </ul>
</div>

